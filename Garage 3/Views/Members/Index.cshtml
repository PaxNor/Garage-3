@model MemberOverviewViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form class = "my-3" asp-action = "MemberOverviewSearch" asp-controller = "Members" method = "get">
    <div class = "input-group mb-3">
        <input type = "text" class = "form-controll" asp-for = "FirstName" placeholder = "Sök efter medlemmar..." />
        <div class = "input-group-append">
            <button type = "submit" class = "mx-3 btn btn-outline-dark"<i>Sök</i>
        </div>
    </div>
</form>

<partial name = "MembersIndexPartial" model = "@Model.Members" />

